@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/Scripts/pages/razor.js"></script>
}

<!-- Jumbotron Header -->
<header class="jumbotron hero-spacer">
    <h1>MVC Sample Website Application</h1>
    <p>This web application is to be used as a catalog of best practices. Also this should serve as a central nested web application repository.</p>
</header>

<hr>

<!-- Page Features -->
<div class="row text-center">

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="~/Content/html5.png" alt="">
            <div class="caption">
                <h3>HTML 5 & CSS3</h3>
                <p>A closer look at HTML 5 and CSS3 capabilities.</p>
                <p>
                    <a href="#" class="btn btn-primary">Enter</a> <a href="#" class="btn btn-default">More Info</a>
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="~/Content/responsive.png" alt="">
            <div class="caption">
                <h3>Responsive</h3>
                <p>More about responsive web design.</p>
                
                <p>
                    @Html.ActionLink("Enter!", "Index", "Bootstrap", null, new { @class = "btn btn-primary" })
                    <a href="#" class="btn btn-default">More Info</a>
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="~/Content/mvc.png" alt="">
            <div class="caption">
                <h3>MVC Razorviews</h3>
                <p>Razor view overview</p>
                <p>
                    @Html.ActionLink("Enter!", "Index", "Razor", null, new { @class = "btn btn-primary" })
                    <a href="#" class="btn btn-primary">Enter</a> <a href="#" class="btn btn-default">More Info</a>
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="~/Content/security.jpg" alt="">
            <div class="caption">
                <h3>Security</h3>
                <p>Essential Vulnerability checks.</p>
                <p>
                    @Html.ActionLink("Enter!", "Index", "Security", null, new {@class = "btn btn-primary"})
                    <a href="#" class="btn btn-primary">Enter</a> <a href="#" class="btn btn-default">More Info</a>
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="~/Content/ErrorHandling.png" alt="">
            <div class="caption">
                <h3>Error Handling</h3>
                <p>Essential Vulnerability checks.</p>
                <p>
                    @Html.ActionLink("Enter!", "Index", "ErrorHandling", null, new {@class = "btn btn-primary"})
                    <a href="#" class="btn btn-default">More Info</a>
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="~/Content/ClientSide.png" alt="">
            <div class="caption">
                <h3>Client Side</h3>
                <p>Some common client side metaphors (Utilities & Communication).</p>
                <p>
                    @Html.ActionLink("Enter!", "Index", "ClientSide", null, new { @class = "btn btn-primary" })
                    <a href="#" class="btn btn-default">More Info</a>
                </p>
            </div>
        </div>
    </div>

</div>

